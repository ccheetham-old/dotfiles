# -*- sh -*-

case $OSTYPE in
    darwin*)
        MY_OS=darwin
        ;;
    linux*)
        MY_OS=linux
        ;;
    solaris*)
        MY_OS=solaris
        ;;
esac

export MY_ARCH=~/${MY_OS}-$(uname -m)
export MY_ARCH_OPT=$MY_ARCH/opt
export MY_NOARCH=~
export MY_NOARCH_OPT=$MY_NOARCH/opt

for f in java python php postgres ruby scala vmware cftest ssh paths aliases; do
    [[ -f ~/.me/$f ]] && source ~/.me/$f
    [[ -f ~/.me/$f-$MY_OS ]] && source ~/.me/$f-$MY_OS
done

