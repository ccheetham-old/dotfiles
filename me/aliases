# -*- sh -*-


alias upalias='. ~/.me/aliases'


#
# superuser
#

[[ $OSTYPE == solaris* ]] && ROOTEXEC='pfexec' || ROOTEXEC='sudo'
alias toor='$ROOTEXEC su -'


#
# system
#

alias reboot='$ROOTEXEC reboot'
alias poweroff='$ROOTEXEC poweroff'
if [[ $OSTYPE == cygwin ]]; then
    alias hosts='$EDITOR /cygdrive/c/Windows/System32/drivers/etc/hosts'
else
    alias hosts='$ROOTEXEC $EDITOR /etc/hosts'
fi

alias ifconfig='/sbin/ifconfig'

[[ $OSTYPE == solaris* ]] && SYSLOG='/var/adm/messages' || SYSLOG='/var/log/messages'
alias systail='$ROOTEXEC tail -f $SYSLOG'
alias space='df -h | grep disk'


#
# shell
#

alias h='history -fD'
alias path='echo $PATH'
alias watch='watch -n1'


#
# files
#

alias ls='ls --classify --color --group-directories-first'
alias ll='ls -l'
alias lh='ll -h'
alias la='ls -a'
alias lla='ls -la'

alias mkdir='mkdir -p'


#
# gentoo
#

alias em='sudo emerge -v'
alias sysup='em --sync'


#
# suse
#
alias zy='sudo zypper'


#
# python
#

alias py='python'
alias pypath='echo $PYTHONPATH'
alias tw='twistd -n'


#
# version control
#

alias g='git'
alias g\?='git status'
alias s='svn'
alias s\?='svn status'
function sd {
    svn diff --diff-cmd colordiff $* | less
    #svn diff $* | less
}


#
