# -*- sh -*-

export NCSS_HOME=/tmp/ncss
export CONNECTOR_TOOLS=~/workspace/connector-tools
export APACHE_CONNECTOR=~/workspace/python-connector

PATH=$PATH:$NCSS_HOME/bin
PATH=$PATH:$CONNECTOR_TOOLS/bin

PYTHONPATH=$APACHE_CONNECTOR/src/python:$PYTHONPATH

alias connlog='xterm -name log -T "Connector Log" -e tail -f '$NCSS_HOME'/var/log/connector/connector.log &'
alias twistderr='xterm -name log -T "Twisted Errors" -e tail -f '$NCSS_HOME'/var/log/connector/twistd.err &'
alias twistdlog='xterm -name log -T "Twisted Log" -e tail -f '$NCSS_HOME'/var/log/connector/twistd.log &'
