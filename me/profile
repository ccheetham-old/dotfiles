# -*- sh -*-

case $OSTYPE in
    darwin*)
        MY_OS=darwin
        ;;
    linux*)
        MY_OS=linux
        ;;
    solaris*)
        MY_OS=solaris
        ;;
esac

export MY_ARCH=~/local/${MY_OS}-$(uname -m)
export MY_ARCH_OPT=$MY_ARCH/opt
export MY_NOARCH=~/local
export MY_NOARCH_OPT=$MY_NOARCH/opt

for f in ncss java python php paths aliases; do
    source ~/.me/$f
    [[ -f ~/.me/$f-$MY_OS ]] && source ~/.me/$f-$MY_OS
done
