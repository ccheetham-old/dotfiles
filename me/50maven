if [[ -d $ME_OPT/maven ]]; then
  export MAVEN_HOME=$ME_OPT/maven
  export MAVEN_OPTS=-Xmx1024m
  PATH=$MAVEN_HOME/bin:$PATH
fi

function _maven()
{
  local version=$1
  shift
  MAVEN_HOME=$ME_OPT/maven${version}
  MAVEN_HOME=$MAVEN_HOME $MAVEN_HOME/bin/mvn $*
}

function m2()
{
  _maven 2 $*
}

function m3()
{
  _maven 3 $*
}

alias m=m3


# vim: filetype=sh
