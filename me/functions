shlog() {
  [[ -z $SHLOG ]] && return
  printf "--- $*\n"
}

is_in_path() {
  local dir=$1
  if (( ${path[(i)$dir]} > ${#path} )); then
    return 1
  else
    return 0
  fi
}

append_path() {
  local dir=$1
  shlog appending $dir to path
  path+=$dir
}


prepend_path() {
  local dir=$1
  shlog prepending $dir to path
  path=($dir $path)
}
# vim: filetype=sh
