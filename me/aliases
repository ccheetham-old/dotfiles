#

alias apache='sudo /etc/init.d/apache2'


#
# logs
#

alias fetchlog='tail -f ~/var/log/fetchmail'


#
# misc apps
#

alias b='brew'
alias mutt='TERM=rxvt-256color mutt -d2'
alias f='ncftp'
alias x='startx'
if [[ $MY_OS == "darwin" ]]; then
  alias vi=mvim
  alias emacs='/usr/local/Cellar/emacs/23.3a/Emacs.app/Contents/MacOS/Emacs -nw'
fi
alias v='vmc'
which colordiff > /dev/null && alias diff=colordiff


#
# ssh
#

function instkey() {
    if [[ $# != 1 ]]; then
        echo "Usage: $0 <host>"
        return
    fi
    local user_host=$1
    echo initializing remote keystore directory
    ssh $user_host mkdir -p .ssh
    echo copying public key
    scp ~/.ssh/id_dsa.pub ${user_host}:tmpkey
    echo installing public key
    ssh $user_host cat tmpkey '>>' .ssh/authorized_keys
    echo cleaning up
    ssh $user_host rm tmpkey
}

function mcdir() {
  mkdir $1
  chdir $1
}


