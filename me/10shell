# -*- sh -*-


alias upalias='. ~/.me/aliases'

alias h='history -fD'
alias path='echo $PATH'

if [[ $ME_OS == darwin ]]; then
    alias ls='ls -FGH'
else
    alias ls='ls --classify --color --group-directories-first'
fi
alias ll='ls -l'
alias lh='ll -h'
alias la='ls -a'
alias lla='ls -la'

alias mkdir='mkdir -p'
function mcdir() {
  mkdir $1
  chdir $1
}

alias watch='watch -n1'
