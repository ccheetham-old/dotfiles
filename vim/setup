#!/usr/bin/env bash

VIM_DIR=$(pwd)
REPO_DIR=../../.repos

MKDIR='/bin/mkdir -p'
LN='/bin/ln -s'
RM='/bin/rm -f'
RMDIR='/bin/rm -rf'

function link_files()
{
  cd $VIM_DIR
  srcdir=$1
  tgtdir=$2
  $RMDIR $tgtdir
  $MKDIR $tgtdir
  cd $tgtdir
  for f in $srcdir/*; do
    $LN $f
  done
}

link_files $REPO_DIR/vim-pathogen/autoload autoload
link_files $REPO_DIR/tomorrow-theme/vim/colors colors
