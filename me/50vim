if [[ $ME_OS == darwin ]]; then
  if [[ -d /usr/local/Cellar/macvim ]]; then
    EDITOR=$(/bin/ls /usr/local/Cellar/macvim/*/MacVim.app/Contents/MacOS/Vim)
    alias vim=$EDITOR
    alias vi='vim'
  fi
fi

which vim > /dev/null && alias vi='vim --remote-silent'
alias view='vi -R'

# vim: filetype=sh
