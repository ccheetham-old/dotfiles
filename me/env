case $OSTYPE in
  cygwin*)
    ME_OS=cygwin
    ;;
  darwin*)
    ME_OS=darwin
    ;;
  freebsd*)
    ME_OS=freebsd
    ;;
  linux*)
    ME_OS=linux
    ;;
  solaris*)
    ME_OS=solaris
    ;;
esac

export ME=~
[[ $ME_OS == cygwin ]] && ME_OPT=/tools || ME_OPT=$ME/opt
export ME_OPT
export ME_ARCH=~/$ME_OS-$(uname -m)
export ME_ARCH_OPT=$ME_ARCH/opt

# vim: filetype=sh
